{erl_opts, [
    {parse_transform, lager_transform},
    nowarn_deprecated_function, % because we can't drop erlang:now without dropping Erlang 17
    warn_export_all,
    warn_export_vars,
    warn_untyped_record,
    warn_unused_import,
    warnings_as_errors
]}.

{profiles, [
    {pedantic, [
        {erl_opts, [warn_missing_spec]}
    ]},
    {test, [
        {erl_opts, [nowarn_missing_spec]}
    ]}
]}.

{deps, [
        {lager, ".*",
            {git, "git://github.com/basho/lager.git", {tag, "3.2.3"}}},
        {pretty_errors, ".*",
            {git, "git://github.com/ethercrow/pretty_errors", "531d79b0057c3b08b8509b326b9bdaf663bf45ce"}},
        {jiffy, ".*",
            {git, "git://github.com/davisp/jiffy.git", {tag, "0.14.2"}}},
        {mzbench_utils, ".*",
            {rsync, "../mzbench_utils/"}}
        ]}.

{deps_dir, "deps"}.
{lib_dirs, ["deps"]}.
{eunit_opts, [verbose]}.
{recursive_cmds, [eunit, xref, clean]}.
{plugins, [
    {rebar_rsync_deps, ".*", {git, "https://github.com/ethercrow/rebar3_rsync_resource", {branch, "master"}}}
    ]}.
{minimum_otp_vsn, "17.0"}.
